{
  "checks": {
    "executableBits": { 
      "strict": 2, 
      "autoStage": true 
    },
    "lineEndings": { 
      "enforce": true 
    },
    "filePermissions": { 
      "warnOnGroupWrite": true 
    }
  },
  "git": { 
    "autoInstallHooks": true,
    "releaseConfirm": {
      "strictDefault": false
    } 
  }, 
  "make": { 
    "defaultTarget": "verify" 
  }
}
