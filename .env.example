# Local development environment variables
# This file is NOT used in CI, Render, or Kubernetes.
# Do not commit real secrets.

# ===============================
# Application
# ===============================
SERVER_PORT=8080
SPRING_APPLICATION_NAME=pokemon-trainer-platform
SPRING_PROFILES_ACTIVE=local

# ===============================
# Database (PostgreSQL)
# ===============================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/pokedex
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=password

# ===============================
# JPA / Hibernate
# ===============================
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# ===============================
# Flyway
# ===============================
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_LOCATIONS=classpath:db/migration

# ===============================
# PokeAPI
# ===============================
POKEAPI_BASE_URL=https://pokeapi.co/api/v2
POKEAPI_TIMEOUT_MS=5000

# ===============================
# Testcontainers (Tests only)
# ===============================
TEST_DATASOURCE_IMAGE=postgres:16-alpine
TEST_DATASOURCE_DB=pokedex_test
TEST_DATASOURCE_USER=test
TEST_DATASOURCE_PASSWORD=test

# ===============================
# Actuator
# ===============================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info

# ===============================
# Ping Endpoint
# ===============================
PING_PATH=/ping
