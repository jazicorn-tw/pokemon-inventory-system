# ===============================
# Application
# ===============================
SERVER_PORT=8080
SERVICE_NAME=pokedex-api
ENVIRONMENT=local

# ===============================
# PostgreSQL
# ===============================
POSTGRES_URL=jdbc:postgresql://localhost:5432/pokedex
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# ===============================
# JPA / Hibernate
# ===============================
# validate | update | create | create-drop
JPA_DDL_AUTO=validate

# ===============================
# Flyway
# ===============================
FLYWAY_ENABLED=true
FLYWAY_LOCATIONS=classpath:db/migration

# ===============================
# PokeAPI
# ===============================
POKEAPI_BASE_URL=https://pokeapi.co/api/v2
POKEAPI_TIMEOUT_MS=5000

# ===============================
# Testcontainers (Tests only)
# ===============================
TEST_POSTGRES_IMAGE=postgres:16-alpine
TEST_POSTGRES_DB=pokedex_test
TEST_POSTGRES_USER=test
TEST_POSTGRES_PASSWORD=test

# ===============================
# Actuator
# ===============================
ACTUATOR_ENDPOINTS=health,info

# ===============================
# Ping Endpoint
# ===============================
PING_PATH=/ping
